<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    >
  <android.support.constraint.Guideline
      android:id="@+id/start"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="@dimen/spacing_large"
      />
  <android.support.constraint.Guideline
      android:id="@+id/top"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_begin="@dimen/spacing_large"
      />
  <android.support.constraint.Guideline
      android:id="@+id/bottom"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_end="@dimen/spacing_large"
      />
  <android.support.constraint.Guideline
      android:id="@+id/end"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_end="@dimen/spacing_large"
      />

  <TextView
      android:id="@+id/imageView"
      android:layout_width="@dimen/size_numero"
      android:layout_height="@dimen/size_numero"
      android:background="@drawable/bg_circle"
      android:text="@string/_2"
      app:layout_constraintBottom_toBottomOf="@+id/bottom"
      app:layout_constraintStart_toStartOf="@+id/start"
      app:layout_constraintTop_toTopOf="@+id/top"
      style="@style/Caption"
      />
  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_standard"
      android:text="@string/title_rounded_button"
      app:layout_constraintStart_toEndOf="@+id/imageView"
      app:layout_constraintTop_toBottomOf="@+id/top"
      style="@style/TextAppearance.AppCompat.Subhead"
      />
  <TextView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="2dp"
      android:ellipsize="end"
      android:maxLines="2"
      android:text="@string/text_rounded_button"
      app:layout_constraintBottom_toTopOf="@+id/bottom"
      app:layout_constraintEnd_toStartOf="@+id/end"
      app:layout_constraintStart_toStartOf="@+id/textView"
      app:layout_constraintTop_toBottomOf="@+id/textView"
      style="@style/TextAppearance.AppCompat.Caption"
      />


</android.support.constraint.ConstraintLayout>